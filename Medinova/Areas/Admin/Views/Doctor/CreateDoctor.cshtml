@model Medinova.DTOs.DoctorDtos.CreateDoctorDto
@{
    ViewBag.Title = "CreateDoctor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Yeni Doktor Ekle</h2>
                </div>
            </div>
        </div>

        <div class="row column1">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Doktor Bilgileri</h2>
                        </div>
                    </div>
                    <div class="full padding_infor_info">
                        <form method="post">
                            <div class="form-group">
                                <label>Ad Soyad</label>
                                <input type="text" class="form-control" name="FullName" placeholder="Dr. Ad Soyad" required>
                            </div>

                            <div class="form-group">
                                <label>Bölüm (Departman)</label>
                                @Html.DropDownListFor(x => x.DepartmenId, (SelectList)ViewBag.Departmens, "--- Bölüm Seçiniz ---", new { @class = "form-control", required = "required" })
                            </div>

                            <div class="form-group">
                                <label>Tanıtım / Açıklama</label>
                                <textarea class="form-control" name="Description" rows="4" placeholder="Doktor hakkında bilgi..."></textarea>
                            </div>

                            <div class="form-group">
                                <label>Fotoğraf URL</label>
                                <input type="text" class="form-control" name="ImageUrl" placeholder="/img/team-1.jpg" required>
                            </div>

                            <div class="form-group margin_0">
                                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Kaydet</button>
                                <a href="/Admin/Doctor/Index" class="btn btn-secondary">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

