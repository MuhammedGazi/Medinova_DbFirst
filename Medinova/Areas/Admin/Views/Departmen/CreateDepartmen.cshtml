@model Medinova.DTOs.DepartmenDtos.CreateDepartmenDto
@{
    ViewBag.Title = "CreateDepartmen";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Yeni Bölüm Ekle</h2>
                </div>
            </div>
        </div>

        <div class="row column1">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Bölüm Bilgileri</h2>
                        </div>
                    </div>
                    <div class="full padding_infor_info">
                        <form method="post">
                            <div class="form-group">
                                <label>Bölüm Adı</label>
                                <input type="text" class="form-control" name="Name" placeholder="Örn: Kardiyoloji" required>
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea class="form-control" name="Description" rows="5" placeholder="Bölüm hakkında kısa bilgi..."></textarea>
                            </div>

                            <div class="form-group margin_0">
                                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Kaydet</button>
                                <a href="/Admin/Departmen/Index" class="btn btn-secondary">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

