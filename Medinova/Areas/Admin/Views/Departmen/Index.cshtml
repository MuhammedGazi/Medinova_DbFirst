@model List<Medinova.DTOs.DepartmenDtos.ResultDepartmenDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Bölüm/Poliklinik Yönetimi</h2>
                </div>
            </div>
        </div>

        <div class="row column1">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Bölüm Listesi</h2>
                        </div>
                        <div class="float-right">
                            <a href="/Admin/Departmen/CreateDepartmen" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Yeni Bölüm Ekle</a>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Bölüm Adı</th>
                                        <th>Açıklama</th>
                                        <th style="width: 200px;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.DepartmenId</td>
                                                <td>
                                                    <strong>@item.Name</strong>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 75)
                                                    {
                                                        @item.Description.Substring(0, 75) <text>...</text>
                                                    }
                                                    else
                                                    {
                                                        @item.Description
                                                    }
                                                </td>
                                                <td>
                                                    <a href="/Admin/Departmen/UpdateDepartmen/@item.DepartmenId" class="btn btn-warning btn-sm text-white"><i class="fa fa-edit"></i> Güncelle</a>
                                                    <a href="/Admin/Departmen/DeleteDepartmen/@item.DepartmenId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fa fa-trash"></i> Sil</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center">Kayıtlı bölüm bulunamadı.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

