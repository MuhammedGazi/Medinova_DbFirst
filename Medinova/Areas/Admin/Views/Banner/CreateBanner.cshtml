@model Medinova.DTOs.BannerDtos.CreateBannerDto
@{
    ViewBag.Title = "CreateBanners";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Yeni Banner Ekle</h2>
                </div>
            </div>
        </div>

        <div class="row column1">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Banner Bilgileri</h2>
                        </div>
                    </div>
                    <div class="full padding_infor_info">
                        <form method="post">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input type="text" class="form-control" name="Title" placeholder="Banner başlığı giriniz" required>
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea class="form-control" name="Description" rows="4" placeholder="Banner açıklaması giriniz"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Görsel URL</label>
                                <input type="text" class="form-control" name="ImageUrl" placeholder="/img/banner-1.jpg" required>
                            </div>

                            <div class="form-group margin_0">
                                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Kaydet</button>
                                <a href="/Banner/Index" class="btn btn-secondary">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

