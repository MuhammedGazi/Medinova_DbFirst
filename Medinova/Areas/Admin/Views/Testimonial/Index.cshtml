@model List<Medinova.DTOs.TestimonialDtos.ResultTestimonialDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Yorum Yönetimi</h2>
                </div>
            </div>
        </div>

        <div class="row column1">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Hasta Yorumları Listesi</h2>
                        </div>
                        <div class="float-right">
                            <a href="/Admin/Testimonial/CreateTestimonial" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Yeni Yorum Ekle</a>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Hasta Adı Soyadı</th>
                                        <th>Yorum</th>
                                        <th style="width: 200px;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.TestimonialId</td>
                                                <td>
                                                    <i class="fa fa-user-circle-o text-muted"></i>
                                                    <strong>@item.UserFullName</strong>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 80)
                                                    {
                                                        <i class="fa fa-quote-left text-primary"></i>
                                                        @item.Description.Substring(0, 80) <text>...</text>
                                                    }
                                                    else
                                                    {
                                                        <i class="fa fa-quote-left text-primary"></i>
                                                        @item.Description
                                                    }
                                                </td>
                                                <td>
                                                    <a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-warning btn-sm text-white"><i class="fa fa-edit"></i> Güncelle</a>
                                                    <a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fa fa-trash"></i> Sil</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center">Henüz yorum bulunmamaktadır.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

