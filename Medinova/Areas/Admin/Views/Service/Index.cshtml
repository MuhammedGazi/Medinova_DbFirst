@model List<Medinova.DTOs.ServiceDtos.ResultServiceDto>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Hizmet Yönetimi</h2>
                </div>
            </div>
        </div>

        <div class="row column1">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Hizmet Listesi</h2>
                        </div>
                        <div class="float-right">
                            <a href="/Admin/Service/CreateService" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Yeni Hizmet Ekle</a>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>İkon</th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th style="width: 200px;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ServiceId</td>
                                                <td class="text-center">
                                                    <i class="fa @item.Icon fa-2x text-primary"></i>
                                                </td>
                                                <td><strong>@item.Title</strong></td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 60)
                                                    {
                                                        @item.Description.Substring(0, 60) <text>...</text>
                                                    }
                                                    else
                                                    {
                                                        @item.Description
                                                    }
                                                </td>
                                                <td>
                                                    <a href="/Admin/Service/UpdateService/@item.ServiceId" class="btn btn-warning btn-sm text-white"><i class="fa fa-edit"></i> Güncelle</a>
                                                    <a href="/Admin/Service/DeleteService/@item.ServiceId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fa fa-trash"></i> Sil</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">Kayıtlı hizmet bulunamadı.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

