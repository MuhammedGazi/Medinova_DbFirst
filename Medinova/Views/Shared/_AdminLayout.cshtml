@{
    Layout = null;

    string userRole = Session["role"] as string;
    string fullName = Session["fullName"] as string;

    string displayName = fullName;
    if (userRole == "Admin")
    {
        displayName = "Admin"+" "+fullName;
    }

    // doktorlar için farklı resimi de sesiona atabiliriz
    string userImg = "/Templates/AdminPluto-1.0.0/images/layout_img/user_img.jpg";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <title>Medinova - Yönetim Paneli</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/Templates/AdminPluto-1.0.0/images/fevicon.png" type="image/png" />
    <link rel="stylesheet" href="~/Templates/AdminPluto-1.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Templates/AdminPluto-1.0.0/style.css" />
    <link rel="stylesheet" href="~/Templates/AdminPluto-1.0.0/css/responsive.css" />
    <link rel="stylesheet" href="~/Templates/AdminPluto-1.0.0/css/colors.css" />
    <link rel="stylesheet" href="~/Templates/AdminPluto-1.0.0/css/bootstrap-select.css" />
    <link rel="stylesheet" href="~/Templates/AdminPluto-1.0.0/css/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/Templates/AdminPluto-1.0.0/css/custom.css" />
    <link rel="stylesheet" href="~/Templates/AdminPluto-1.0.0/js/semantic.min.css" />
</head>
<body class="inner_page general_elements">
    <div class="full_container">
        <div class="inner_container">
            <nav id="sidebar">
                <div class="sidebar_blog_1">
                    <div class="sidebar-header">
                        <div class="logo_section">
                            <a href="index.html"><img class="logo_icon img-responsive" src="~/Templates/AdminPluto-1.0.0/images/logo/logo_icon.png" alt="#" /></a>
                        </div>
                    </div>
                    <div class="sidebar_user_info">
                        <div class="icon_setting"></div>
                        <div class="user_profle_side">
                            <div class="user_img"><img class="img-responsive" src="@userImg" alt="#" /></div>
                            <div class="user_info">
                                <h6>@displayName</h6>
                                <p><span class="online_animation"></span> @userRole</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar_blog_2">
                    <h4>Menü</h4>
                    <ul class="list-unstyled components">

                        @if (userRole == "Admin")
                        {
                            <li><a href="/Admin/Banner/Index"><i class="fa fa-picture-o purple_color2"></i> <span>Banner İşlemleri</span></a></li>
                            <li><a href="/Admin/About/Index"><i class="fa fa-info-circle orange_color"></i> <span>Hakkımızda</span></a></li>
                            <li><a href="/Admin/AboutItem/Index"><i class="fa fa-list-ul blue1_color"></i> <span>Hakkımızda Maddeler</span></a></li>
                            <li><a href="/Admin/Service/Index"><i class="fa fa-ambulance red_color"></i> <span>Hizmetler</span></a></li>
                            <li><a href="/Admin/Departmen/Index"><i class="fa fa-hospital-o green_color"></i> <span>Departmanlar</span></a></li>
                            <li><a href="/Admin/Doctor/Index"><i class="fa fa-user-md yellow_color"></i> <span>Doktorlar</span></a></li>
                            <li><a href="/Admin/Testimonial/Index"><i class="fa fa-comments purple_color"></i> <span>Hasta Yorumları</span></a></li>
                            <li>
                                <a href="/Admin/Forecast/DepartmentForecast">
                                    <i class="fa fa-line-chart blue_color"></i>
                                    <span>Bölüm Tahminleri</span>
                                </a>
                            </li>

                            <li>
                                <a href="/Admin/Forecast/HourlyDemandForecast">
                                    <i class="fa fa-clock-o green_color"></i>
                                    <span>Saatlik Yoğunluk</span>
                                </a>
                            </li>
                            <li><a href="/Default/Index"><i class="fa fa-comments purple_color"></i> <span>Siteye Dön</span></a></li>
                        }
                        else if (userRole == "Doctor")
                        {
                            <li>
                                <a href="/Doctor/Appointment/Index">
                                    <i class="fa fa-calendar blue1_color"></i>
                                    <span>Randevular</span>
                                </a>
                            </li>
                            <li><a href="/Default/Index"><i class="fa fa-comments purple_color"></i> <span>Siteye Dön</span></a></li>
                        }
                        else if (userRole == "User")
                        {
                            <li>
                                <a href="/User/Appointment/Index">
                                    <i class="fa fa-calendar-check-o green_color"></i>
                                    <span>Randevularım</span>
                                </a>
                            </li>
                            <li><a href="/Default/Index"><i class="fa fa-comments purple_color"></i> <span>Siteye Dön</span></a></li>
                        }
                        else
                        {
                            @* --- GİRİŞ YAPMAMIŞSA --- *@
                            <li><a href="/Account/Login"><i class="fa fa-sign-in"></i> <span>Giriş Yap</span></a></li>
                        }

                    </ul>
                </div>
            </nav>
            <div id="content">
                <div class="topbar">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <div class="full">
                            <button type="button" id="sidebarCollapse" class="sidebar_toggle"><i class="fa fa-bars"></i></button>
                            <div class="logo_section">
                                <a href="index.html"><img class="img-responsive" src="~/Templates/AdminPluto-1.0.0/images/logo/logo.png" alt="#" /></a>
                            </div>
                            <div class="right_topbar">
                                <div class="icon_info">
                                    <ul>
                                        <li><a href="#"><i class="fa fa-bell-o"></i><span class="badge">2</span></a></li>
                                        <li><a href="#"><i class="fa fa-question-circle"></i></a></li>
                                        <li><a href="#"><i class="fa fa-envelope-o"></i><span class="badge">3</span></a></li>
                                    </ul>
                                    <ul class="user_profile_dd">
                                        <li>
                                            <a class="dropdown-toggle" data-toggle="dropdown">
                                                <img class="img-responsive rounded-circle" src="@userImg" alt="#" />
                                                <span class="name_user">@displayName</span>
                                            </a>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="profile.html">Profilim</a>
                                                <a class="dropdown-item" href="settings.html">Ayarlar</a>
                                                <a class="dropdown-item" href="/Account/Logout"><span>Çıkış Yap</span> <i class="fa fa-sign-out"></i></a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="midde_cont">
                    <div class="container-fluid">
                        <div class="row column_title">
                            <div class="col-md-12">
                                <div class="page_title">
                                    <h2>Panel</h2>
                                </div>
                            </div>
                        </div>

                        @RenderBody()

                    </div>
                </div>

            </div>
        </div>
    </div>
    <script src="~/Templates/AdminPluto-1.0.0/js/jquery.min.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/popper.min.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/bootstrap.min.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/animate.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/bootstrap-select.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/owl.carousel.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/Chart.min.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/Chart.bundle.min.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/utils.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/analyser.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/perfect-scrollbar.min.js"></script>
    <script>var ps = new PerfectScrollbar('#sidebar');</script>
    <script src="~/Templates/AdminPluto-1.0.0/js/custom.js"></script>
    <script src="~/Templates/AdminPluto-1.0.0/js/semantic.min.js"></script>
</body>
</html>